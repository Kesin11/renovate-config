{
  "extends": [
    "config:base",
    ":label(renovate)",
    ":timezone(Asia/Tokyo)",
    ":unpublishSafe",
    ":enableVulnerabilityAlerts",
    ":semanticCommitTypeAll(chore)",
    "group:definitelyTyped",
    "group:jsTest",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "separateMajorMinor": false,
      "extends": [
        ":automergeMajor"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "Auto merge major github-actions",
      "matchDepTypes": [
        "action"
      ],
      "extends": [
        ":automergeMajor"
      ]
    }
  ]
}
